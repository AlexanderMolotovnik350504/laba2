<h1>Listing Hospitals</h1>

<table>
  <thead>
  

  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.name %></td>
        <td><%= link_to 'Show', hospital %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
      <th>Room</th>
      <th>Breake time</th>
      <th>Open time</th>
      <th>Closed time</th>
      <th>Day off</th>
    </tr>
      <% hospital.rooms.each do |room| %>
    
      <tr>
      <td><%= room.name %></show>
      <td><%= room.schedule.break_time %></td>
      <td><%= room.schedule.open_time %></td>
      <td><%= room.schedule.closed_time %></td>
      <td><%= room.schedule.day_off %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

